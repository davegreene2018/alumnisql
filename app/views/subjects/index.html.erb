<h1 class="title is-2">Subjects</h1>

<%# if has_role?(:admin) %>
<div class="level">
  <div class="level-left"></div>
  <div class="level-right">
    <%= link_to 'New Subject', new_subject_path, class:'button is-dark' %>
  </div>
</div>

<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>Subject</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @subjects.each do |subject| %>
    <tr>
      <td><%= link_to subject.subject, subject %></td>
      <td>
        <div class="buttons is-right">
          <%= link_to 'View Subject', subject, class:'button' %>
          <%= link_to 'Edit Subject', edit_subject_path(subject), class:'button' %>
          <%= link_to 'Delete', subject, class:'button is-danger', method: :delete, data: { confirm: "Are you sure you want to delete this subject? " } %>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>

</table>

<%# else %>
 <p class="has-text-center">Sorry! You don't have access this page.</p>
<%# end %>